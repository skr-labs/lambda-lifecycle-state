{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "incremental": true,
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "target": "es5"
    },
    "include": ["src/"],
    "exclude": ["node_modules/"]
}
